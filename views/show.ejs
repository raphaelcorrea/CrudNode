<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>CRUD NodeJS</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body >

<h2>Registros</h2>
  <table border="1" class="table table-dark container">
    <thead>
        <tr>
            <td>Placa</td>
            <td>Chasse</td>
            <td>Renavam</td>
            <td>Modelo</td>
            <td>Marca</td>
            <td>Ano</td>
        </tr>
    </thead>
    <tbody>
    <% data.forEach(function(details) { %>
        <tr>
            <td><%= details.placa %></td>
            <td><%= details.chassi %></td>
            <td><%= details.renavam %></td>
            <td><%= details.modelo %></td>
            <td><%= details.marca %></td>
            <td><%= details.ano %></td>
            
            <td><a href="/edit/<%= details.id %>">Editar</a> - <a href="/delete/<%= details.id %>">Deletar</a></td>
        </tr>
        <% }) %>
    </tbody>
  </table>
  <div class="container">

    <button><a href="/">Novo</a></button>
  </div>
</body>
</html>